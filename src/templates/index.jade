    <![endif]-->

    link(
      href='https://fonts.googleapis.com/css?family=Arbutus+Slab' 
      rel='stylesheet'
      type='text/css'
    )

    // build:css css/main.min.css
    link(
      href="bower_components/animate.css/animate.css"
      rel='stylesheet'
      type='text/css'
    )
    link(
      href="css/main.css"
      rel='stylesheet'
      type='text/css'
    )
    // endbuild

  body
    include ./partials/_gtm.jade
    include ./partials/_bighead.jade

    include ./partials/_summary.jade
    include ./partials/_projects.jade
